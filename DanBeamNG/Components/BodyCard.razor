@*<div class="col">*@
    <div class="card rounded-3 image-card">
        <div class="card-header py-3 image-card-title">
            <h4 class="text-center">@bodyStyle?.Name</h4>
        </div>
        <div class="image-card-footer">
            <center>
                <a href="@($"ViewBody/{bodyStyle?.ID}")" class="btn btn-primary btn-sm" title="Inspect this vehicle">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </a>
                <a href="@($"EditBody/{bodyStyle?.ID}")" class="btn btn-primary btn-sm" title="Edit this vehicle">
                    <i class="fa-solid fa-pencil"></i>
                </a>
                <button type="button" onclick="@DeleteImage" class="btn btn-danger btn-sm" title="Delete this vehicle">
                    <i class="fa-solid fa-trash-can"></i>
                </button>
            </center>
        </div>
    </div>
@*</div>*@
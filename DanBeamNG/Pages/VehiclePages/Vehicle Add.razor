@page "/AddVehicle"
@using SpenSoft.DanBeamNG.Components

@if (Saved == true)
{
    <div class="alert @StatusClass">
        @Message
    </div>
}

<section>
    <h1 class="page-title text-center">Adding a new Vehicle</h1>
    <br />
    <br />

    @if (Vehicle != null)
    {
        <EditForm Model="@Vehicle" OnValidSubmit="ValidSumitHandler" OnInvalidSubmit="InvalidSubmitHandler">
            <DataAnnotationsValidator />
            <ValidationSummary></ValidationSummary>

            <center>
                <RenderComponent><VehicleNameEdit vehicle="@Vehicle" showImage=false /></RenderComponent>
            </center>

            <center>
                <button type="submit" class="btn btn-primary btn-sm"><i class="fa-solid fa fa-floppy-o" /> Save</button>
            </center>

        </EditForm>
    }
</section>

<hr />
<center>
    <a href="@("ListVehicle")" class="btn btn-primary btn-sm me-2"><i class="fa-solid fa-rotate-left" /> Return to List</a>
    @if (Vehicle?.ID > 0)
    {
        <a href="@($"EditVehicle/{Vehicle?.ID}")" class="btn btn-primary btn-sm me-2"><i class="fa-solid fa-pencil" /> Edit Vehicle</a>
    }
    @* <a href="/" class="btn btn-primary btn-sm"><i class="fa-solid fa-home"></i> Home</a> *@
</center>
@page "/RandomVehicleCountry"
@using SpenSoft.DanBeamNG.Components


<div class="col high-600 wide400">
    <div class="py-2">
        <h2 class="text-center ">Random Vehicle Selection</h2>
        <h4 class="text-center ">by Country</h4>
    </div>


    <div class="random-card-select py-1">
        <div class="row">
            <div class="wide40p">Select Country</div>
            <div class="wide60p">
                <InputSelect id="activity-countrySelect" class="wide100p"
                             ValueChanged="@((Guid? x) => WhenValueChanges(x))"
                             ValueExpression="@(() => SelectedCountry)"
                             Value="@SelectedCountry">
                    <option value="@Guid.Empty"></option>
                    @if ((Country_List != null) && (Country_List.Count > 0))
                    {
                        foreach (var c in Country_List)
                        {
                            <option value="@c.ID">@c.Name</option>
                        }
                    }
                </InputSelect>
            </div>
        </div>
        <div>
            @if (ConfigurationCount > 0)
            {
                <div class="sFont td-center">
                    @($"Number of Configurations: {ConfigurationCount}")
                </div>
            }
        </div>
    </div>

    @if ((SelectedCountry != null) && (SelectedCountry != Guid.Empty))
    {
        <div class="wide400">
            <RenderComponent>
                <RandomCountryCard VehicleName="@VehicleName" ConfigurationName="@ConfigurationName" BodyStyleName="@BodyStyleName"
                                   ClassificationName="@ClassificationName" CountryName="@CountryName" DriveTrainName="@DriveTrainName"
                                   ImageID="@ConfigurationImageID" />
            </RenderComponent>
        </div>

        <div class="vmargin-10 wide400">
            <center>
                <button type="button" class="btn btn-primary btn-sm mb-1" @onclick="@GetNext">
                    <i class="fa-solid fa-arrow-circle-right" />
                    Next Random Configuration
                </button>
            </center>
        </div>
    }
</div>
<br />

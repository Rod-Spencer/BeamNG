@page "/DeleteConfiguration/{ID}"

@if (Configuration != null)
{
    @if (Deleted == true)
    {
        <h3 class="page-title">Deleted Configuration: @Configuration.Name</h3>
    }
    else
    {
        <div class="alert @StatusClass">
            @Message
        </div>
    }

    <hr />
    <a href="@($"EditVehicle/{@Configuration.VehicleID}")" class="btn btn-primary btn-sm me-2"><i class="fa-solid fa-rotate-left" /> Return to Vehicle</a>
}
else
{
    <div class="alert alert-warning">
        Configuration object is null
    </div>
    <hr />
}
<a href="@("ListVehicle")" class="btn btn-primary btn-sm me-2"><i class="fa-solid fa-rotate-left" /> Return to List</a>
<a href="/" class="btn btn-primary btn-sm me-2"><i class="fa-solid fa-home"></i> Home</a>

@page "/ListBody"
@using Microsoft.AspNetCore.Components.Web.Virtualization
@using SpenSoft.DanBeamNG.Components

<h1 class="page-title text-center">List All Body Styles</h1>
<br />

@if ((bodyStyleList == null) && (Error == false))
{
    <p><em>Loading...</em></p>
}
else if ((bodyStyleList == null) && (Error == true))
{
    <div class="alert @StatusClass">
        @Message1
        <br />
        @Message2
    </div>
}
else
{
    <a href="@($"AddBody")" class="btn btn-success btn-sm"><i class="fa-solid fa-plus" /> Add Body Style</a>
    <br />
    <br />
    <div class="row">
        @foreach (var v in bodyStyleList)
        {
            @* <div class="col-12 col-sm-12 col-md-6 col-sm-6 col-lg-4 col-xl-4 col-sm-4"> *@
            <div class="col-12 col-md-6 col-lg-3 mb-3">
                <RenderComponent><BodyCard bodyStyle="@v" bodyStyle_Delegate="Delete_Body_Handler" /></RenderComponent>
            </div>
        }
    </div>

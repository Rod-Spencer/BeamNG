@page "/ListBody"
@using Microsoft.AspNetCore.Components.Web.Virtualization

<h1 class="page-title text-center">List All Body Styles</h1>
<br />

@if ((bodyStyleList == null) && (Error == false))
{
    <p><em>Loading...</em></p>
}
else if ((bodyStyleList == null) && (Error == true))
{
    <div class="alert @StatusClass">
        @Message1
        <br />
        @Message2
    </div>
}
else
{
    <a href="@($"AddBody")" class="btn btn-success btn-sm"><i class="fa-solid fa-plus" /> Add Body Style</a>
    <br />
    <br />
    <div class="tableFixHead">
        <table class="table" style="width:100%">
            <thead>
                <tr>
                    <th></th>
                    <th>ID</th>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <Virtualize Items="bodyStyleList" ItemSize="itemHeight" Context="v">
                    <ItemContent>
                        <tr @key="v.ID">
                            <th></th>
                            <th>@v.ID</th>
                            <th>@v.Name</th>
                            <th>
                                <a href="@($"ViewBody/{v.ID}")" class="btn btn-primary btn-sm" title="Inspect this Body Style">
                                    <i class="fa-solid fa-magnifying-glass"></i>
                                </a>
                                <a href="@($"EditBody/{v.ID}")" class="btn btn-primary btn-sm" title="Edit this Body Style">
                                    <i class="fa-solid fa-pencil"></i>
                                </a>
                                <a href="@($"DeleteBody/{v.ID}")" class="btn btn-danger btn-sm" title="Delete this Body Style">
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>
                            </th>
                        </tr>
                    </ItemContent>
                </Virtualize>
            </tbody>
        </table>
    </div>
}
<br />

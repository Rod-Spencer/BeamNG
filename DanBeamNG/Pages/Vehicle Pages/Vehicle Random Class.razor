@page "/RandomVehicle/Class/{ClassName}"
@page "/RandomVehicle/Class/"


<h1 class="page-title text-center">Randomly Select Vehicle by Classification</h1>

<div class="col-12 d-flex align-items-center justify-content-center">
    <label class="col-2 col-form-label">Select Classification </label>
    <div class="col-2">
        @if (Classifications_List != null)
        {
            <InputSelect id="activity-classSelect" class="form-control" @bind-Value="@SelectedClass" placeholder="Select Classification">
                <option value="@Guid.Empty"></option>
                @foreach (var c in Classifications_List)
                {
                    <option value="@c.ID">@c.Name</option>
                }
            </InputSelect>
        }

    </div>
</div>

<hr />

@if ((SelectedClass.HasValue == true) && (SelectedClass != Guid.Empty))
{
    @if (Vehicle != null)
    {
        <h1 class="page-title text-center">
            Viewing Vehicle: @Vehicle.Name
        </h1>
    }
    @if (Configuration != null)
    {
        <h3 class="page-title text-center">
            Configuration: @Configuration.Name
        </h3>
    }

    <div class="col-12 row">
        <div class="col-10">
            <div class="col-xs-12 col-sm-8">
                <div class="form-group row mb-2">
                    <label class="col-sm-4 col-form-label">Vehicle ID</label>
                    <div class="col-sm-8">
                        @if (Vehicle != null)
                        {
                            <label type="text" class="form-control-plaintext">@Vehicle.ID</label>
                        }
                    </div>
                </div>

                <div class="form-group row mb-2">
                    <label class="col-sm-4 col-form-label">Configuration ID</label>
                    <div class="col-sm-8">
                        @if (Configuration != null)
                        {
                            <label type="text" class="form-control-plaintext">@Configuration.ID</label>
                        }
                    </div>
                </div>

                <div class="form-group row mb-2">
                    <label class="col-sm-4 col-form-label">Configuration Name</label>
                    <div class="col-sm-8">
                        @if (Configuration != null)
                        {
                            <label type="text" class="form-control-plaintext">@Configuration.Name</label>
                        }
                    </div>
                </div>

                <div class="form-group row mb-2">
                    <label class="col-sm-4 col-form-label">Classification</label>
                    <div class="col-sm-8">
                        @if ((Configuration != null) && (Configuration.ClassificationID.HasValue == true))
                        {
                            <label type="text" class="form-control-plaintext">@ClassificationsName(Configuration.ClassificationID)</label>
                        }
                    </div>
                </div>

                <div class="form-group row mb-2">
                    <label class="col-sm-4 col-form-label">Body Style</label>
                    <div class="col-sm-8">
                        @if ((Configuration != null) && (Configuration.BodyStyleID.HasValue == true))
                        {
                            <label type="text" class="form-control-plaintext">@BodyStyleName(Configuration.BodyStyleID)</label>
                        }
                    </div>
                </div>

                <div class="form-group row mb-2">
                    <label class="col-sm-4 col-form-label">Country</label>
                    <div class="col-sm-8">
                        @if (Configuration != null)
                        {
                            <label type="text" class="form-control-plaintext">@CountriesName(Configuration.CountryID)</label>
                        }
                    </div>
                </div>

                <div class="form-group row mb-2">
                    <label class="col-sm-4 col-form-label">Drive Train</label>
                    <div class="col-sm-8">
                        @if (Configuration != null)
                        {
                            <label type="text" class="form-control-plaintext">@DriveTrainName(Configuration.DriveTrainID)</label>
                        }
                    </div>
                </div>

                <div class="form-group row mb-2">
                    <label class="col-sm-4 col-form-label">Image Name</label>
                    <div class="col-sm-8">
                        @if (vehicleImage != null)
                        {
                            <label type="text" class="form-control-plaintext">@vehicleImage.ImageName</label>
                        }
                    </div>
                </div>

                <div class="form-group row mb-2">
                    <label class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        @if (vehicleImage != null)
                        {
                            <ImageVehicle image="@vehicleImage.ImageName" />
                            @* <img class="image-w400 image-h250" src="data:image/bmp;base64, @(Convert.ToBase64String(ImageData))" /> *@
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<hr />

<div class="m-b-sm">
    <a href="@("ListVehicle")" class="btn btn-primary btn-sm me-2"><i class="fa-solid fa-rotate-left" /> Return to Vehicle List</a>
    <a href="/" class="btn btn-primary btn-sm"><i class="fa-solid fa-home"></i> Home</a>
</div>
<br />
<div class="m-t-sm">
    <a class="btn btn-primary btn-sm" onclick="@NavigateToClassName"><i class="fa-solid fa-arrow-circle-right" /> Next Random Configuration </a>
    @* <a href="@($"RandomVehicle/Class/{ClassName}")" class="btn btn-primary btn-sm"><i class="fa-solid fa-arrow-circle-right" /> Next Random Configuration </a> *@
</div>
